{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Taiwan Tourist",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/djhau278/FIT3179/main/HW9/js/countries.topojson",
    "format": {
          "type": "topojson",
          "feature": "countries"
        }
  },
  "transform": [ 
    { 
      "lookup": "properties.NAME",
      "from": { 
        "data": { 
          "url": "https://raw.githubusercontent.com/djhau278/FIT3179/main/HW9/data/residence.csv"
       },
      "key": "Country", 
      "fields": ["Total"]
    }
  },
   {"calculate": "datum.Total + 0.1", "as": "Tourist Count"}
 ],
  "projection": {"type": "equirectangular"},
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Tourist Count",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Total", "type": "quantitative"}
    ]
  },
  "config": {}
}
